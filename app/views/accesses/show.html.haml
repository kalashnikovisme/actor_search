- model_class = Acces
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @access.state
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @access.user_id
%p
  %strong= model_class.human_attribute_name(:searcher_id) + ':'
  %br
  = @access.searcher_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), accesses_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_access_path(@access), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), access_path(@access), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
