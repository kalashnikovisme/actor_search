- model_class = Actor
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:middle_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @actors.each do |actor|
      %tr
        %td= link_to actor.id, actor_path(actor)
        %td= actor.first_name
        %td= actor.middle_name
        %td= actor.last_name
        %td= actor.phone
        %td= actor.email
        %td= actor.user_id
        %td=l actor.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_actor_path(actor), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), actor_path(actor), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_actor_path, :class => 'btn btn-primary'
