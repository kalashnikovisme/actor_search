- model_class = Actor
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @actor.first_name
%p
  %strong= model_class.human_attribute_name(:middle_name) + ':'
  %br
  = @actor.middle_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @actor.last_name
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @actor.phone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @actor.email
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @actor.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), actors_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_actor_path(@actor), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), actor_path(@actor), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
