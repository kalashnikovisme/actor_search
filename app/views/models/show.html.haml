- model_class = Model
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @model.first_name
%p
  %strong= model_class.human_attribute_name(:middle_name) + ':'
  %br
  = @model.middle_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @model.last_name
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @model.phone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @model.email
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @model.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), models_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_model_path(@model), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), model_path(@model), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
